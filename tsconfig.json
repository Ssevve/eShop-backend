{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots" : ["src/types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "./api/*.ts",
    "global.d.ts",
    "./*.js",
    "src/**/*.ts", "src/middleware.ts",
  ],
}
